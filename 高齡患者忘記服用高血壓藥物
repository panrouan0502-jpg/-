    let currentLang = 'zh';

    function switchLang(lang) {
        currentLang = lang;
        document.querySelectorAll('.lang-btn').forEach(btn => btn.classList.remove('active'));
        event.target.classList.add('active');
        
        document.getElementById('hero-title').innerText = content[lang].heroT;
        document.getElementById('hero-desc').innerText = content[lang].heroD;
        document.getElementById('core-title').innerText = content[lang].coreT;
        document.getElementById('step1').innerHTML = content[lang].step1 + `<span class="tip-icon" onclick="alertMsg(1)">?</span>`;
        document.getElementById('step2').innerHTML = content[lang].step2 + `<span class="tip-icon" onclick="alertMsg(2)">?</span>`;
        document.getElementById('step3').innerHTML = content[lang].step3 + `<span class="tip-icon" onclick="alertMsg(3)">?</span>`;
        document.getElementById('remind-title').innerText = content[lang].remindT;
        document.getElementById('remind-text').innerText = content[lang].remindD;
        document.getElementById('cta-text').innerText = content[lang].cta;
    }

    function alertMsg(num) {
        alert(content[currentLang].tips[num-1]);
    }

    function showFinalMsg() {
        alert(content[currentLang].final);
    }

    // æ²å‹•å‹•ç•«åµæ¸¬
    window.addEventListener('scroll', () => {
        const cards = document.querySelectorAll('.card');
        cards.forEach(card => {
            const rect = card.getBoundingClientRect();
            if(rect.top < window.innerHeight - 100) {
                card.classList.add('animate__fadeInUp');
            }
        });
    });
